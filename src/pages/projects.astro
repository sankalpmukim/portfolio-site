---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import Card from "../components/Card.astro";
import logoClipboard from "../assets/images/logos/clipboard.svg";
import logoNumpuz from "../assets/images/logos/numpuz.svg";
import logoVitWifiConnect from "../assets/images/logos/vitWifiLogin.png";
import logoCourtHero from "../assets/images/logos/courtHero.ico";

const projects = [
  {
    name: 'Numpuz',
    description:
      'A multiplayer UI intensive interactive puzzle based game. Built using ReactJS with a Realtime leaderboard.',
    link: {
      href: 'https://numpuz.sankalpmukim.dev',
      label: 'numpuz.sankalpmukim.dev',
    },
    logo: logoNumpuz,
  },
  {
    name: 'Shared Clipboard',
    description:
      'A simple, secure, and free way to share text between devices using a single link.',
    link: {
      href: 'https://clip.sankalpmukim.dev',
      label: 'clip.sankalpmukim.dev',
    },
    logo: logoClipboard,
  },
  {
    name: 'VIT WiFi Connect',
    description:
      "Android App that helps student connect to VIT WiFi in a single click. Helps avoid VIT's Clunky WiFi website.",
    link: {
      href: 'https://play.google.com/store/apps/details?id=com.sankalpmukim.vitwifilogin',
      label: 'Google Play Store',
    },
    logo: logoVitWifiConnect,
  },
  {
    name: 'Court Hero',
    description:
      'An IOT based solution to help students find out the state of the badminton court remotely. Built using Raspberry Pi, NextJS and Firebase.',
    link: {
      href: 'https://courthero.sankalpmukim.dev',
      label: 'Court Hero Frontend',
    },
    logo: logoCourtHero,
  },
];
---

<Layout 
  title="Projects - Sankalp Mukim" 
  description="Explore a collection of my software development projects that illustrate my technical expertise, problem-solving abilities, and creativity. From individual coding challenges to collaborative team efforts, these works represent a diverse range of skills and a commitment to delivering quality solutions."
>
  <Container class="mt-16 sm:mt-32">
    <header class="max-w-2xl">
      <h1 class="text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 sm:text-5xl">
        Projects & Portfolio
      </h1>
      <p class="mt-6 text-base text-zinc-600 dark:text-zinc-400">
        Explore a collection of my software development projects that illustrate my technical expertise, problem-solving abilities, and creativity. From individual coding challenges to collaborative team efforts, these works represent a diverse range of skills and a commitment to delivering quality solutions.
      </p>
    </header>
    <div class="mt-16 sm:mt-20">
      <ul
        role="list"
        class="grid grid-cols-1 gap-x-12 gap-y-16 sm:grid-cols-2 lg:grid-cols-3"
      >
        {projects.map((project) => (
          <Card as="li">
            <div class="relative z-10 flex h-12 w-12 items-center justify-center rounded-full bg-white shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0">
              <img
                src={project.logo.src}
                alt=""
                class="h-8 w-8 rounded-full bg-white"
              />
            </div>
            <h2 class="mt-6 text-base font-semibold text-zinc-800 dark:text-zinc-100">
              {project.name}
            </h2>
            <p class="relative z-10 mt-2 text-sm text-zinc-600 dark:text-zinc-400">
              {project.description}
            </p>
            <p class="relative z-10 mt-6 flex text-sm font-medium text-zinc-400 transition group-hover:text-teal-500 dark:text-zinc-200">
              <svg viewBox="0 0 24 24" aria-hidden="true" class="h-6 w-6 flex-none">
                <path
                  d="M15.712 11.823a.75.75 0 1 0 1.06 1.06l-1.06-1.06Zm-4.95 1.768a.75.75 0 0 0 1.06-1.06l-1.06 1.06Zm-2.475-1.414a.75.75 0 1 0-1.06-1.06l1.06 1.06Zm4.95-1.768a.75.75 0 1 0-1.06 1.06l1.06-1.06Zm3.359.53-.884.884 1.06 1.06.885-.883-1.061-1.06Zm-4.95-2.12 1.414-1.415L12 6.344l-1.415 1.413 1.061 1.061Zm0 3.535a2.5 2.5 0 0 1 0-3.536l-1.06-1.06a4 4 0 0 0 0 5.656l1.06-1.06Zm4.95-4.95a2.5 2.5 0 0 1 0 3.535L17.656 12a4 4 0 0 0 0-5.657l-1.06 1.06Zm1.06-1.06a4 4 0 0 0-5.656 0l1.06 1.06a2.5 2.5 0 0 1 3.536 0l1.06-1.06Zm-7.07 7.07.176.177 1.06-1.06-.176-.177-1.06 1.06Zm-3.183-.353.884-.884-1.06-1.06-.884.883 1.06 1.06Zm4.95 2.121-1.414 1.414 1.06 1.06 1.415-1.413-1.06-1.061Zm0-3.536a2.5 2.5 0 0 1 0 3.536l1.06 1.06a4 4 0 0 0 0-5.656l-1.06 1.06Zm-4.95 4.95a2.5 2.5 0 0 1 0-3.535L6.344 12a4 4 0 0 0 0 5.656l1.06-1.06Zm-1.06 1.06a4 4 0 0 0 5.657 0l-1.061-1.06a2.5 2.5 0 0 1-3.535 0l-1.061 1.06Zm7.07-7.07-.176-.177-1.06 1.06.176.178 1.06-1.061Z"
                  fill="currentColor"
                />
              </svg>
              <a class="ml-2" href={project.link.href}>
                {project.link.label}
              </a>
            </p>
          </Card>
        ))}
      </ul>
    </div>
  </Container>
</Layout>