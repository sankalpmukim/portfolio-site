---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import SocialIcons from "../components/SocialIcons.astro";
import Card from "../components/Card.astro";
import CardTitle from "../components/CardTitle.astro";
import CardDescription from "../components/CardDescription.astro";
import CardCta from "../components/CardCta.astro";
import CardEyebrow from "../components/CardEyebrow.astro";
import Button from "../components/Button.astro";

import image1 from "../assets/images/photos/image-1.jpg";
import image2 from "../assets/images/photos/image-2.jpg";
import image3 from "../assets/images/photos/image-3.jpg";
import image4 from "../assets/images/photos/image-4.jpg";
import image5 from "../assets/images/photos/image-5.jpg";
import logoIndiahikes from "../assets/images/logos/indiahikes.jpeg";
import logoIotReady from "../assets/images/logos/iotReady.jpeg";
import logoNorthOfZero from "../assets/images/logos/northOfZero.jpeg";
import logoION from "../assets/images/logos/iongroup_logo.jpeg";
import logoStreak from "../assets/images/logos/streakcard_logo.jpeg";
import logoIbm from "../assets/images/logos/IBM.png";

const INTRO = `Hi, I'm Sankalp, a software engineer with a passion for full stack engineering, backend engineering, and DevOps. I pride myself on delivering efficient and high-quality software solutions, and I have developed a wealth of experience and knowledge in the industry.`;

function formatDate(dateString) {
  return new Date(`${dateString}T00:00:00Z`).toLocaleDateString('en-US', {
    day: 'numeric',
    month: 'long',
    year: 'numeric',
    timeZone: 'UTC',
  })
}

// Sample articles data
const articles = [
  {
    slug: 'concurrency_control_guide',
    title: 'Advanced Concurrency Control in Node.js and TypeScript',
    date: '2025-07-08',
    description: 'An article that takes you through the entire journey of implementing advanced concurrency control in Node.js and TypeScript.'
  },
  {
    slug: 'casing-matters',
    title: 'Casing Matters',
    date: '2025-07-07', 
    description: 'A comprehensive guide on different casing conventions in programming and when to use them.'
  },
  {
    slug: 'adapter_pattern_article',
    title: 'The Adapter Pattern',
    date: '2025-07-06',
    description: 'Understanding the Adapter design pattern with practical examples and implementation.'
  },
  {
    slug: 'horizontally-scaling-realtime-applications',
    title: 'Horizontally Scaling Realtime Applications',
    date: '2025-07-05',
    description: 'Learn how to scale real-time applications across multiple servers and handle millions of concurrent connections.'
  }
];

const resumes = [
  {
    company: 'IBM',
    title: 'Software Engineer',
    logo: logoIbm,
    start: 'March 2025',
    end: {
      label: 'Present',
      dateTime: new Date().getFullYear(),
    },
  },
  {
    company: 'ION',
    title: 'Software Engineer',
    logo: logoION,
    start: 'January 2024',
    end: 'March 2025',
  },
  {
    company: 'Streak (YC W22)',
    title: 'Software Engineer',
    logo: logoStreak,
    start: 'October 2023',
    end: 'November 2023',
  },
  {
    company: 'North of Zero',
    title: 'Backend Developer',
    logo: logoNorthOfZero,
    start: 'June 2023',
    end: 'August 2023',
  },
  {
    company: 'Indiahikes',
    title: 'Full Stack Engineer',
    logo: logoIndiahikes,
    start: 'October 2022',
    end: 'January 2023',
  },
  {
    company: 'IotReady',
    title: 'React Engineer',
    logo: logoIotReady,
    start: 'January 2021',
    end: 'March 2021',
  },
];
---

<Layout title="Sankalp Mukim - Backend, Devops, Engineering" description={INTRO}>
  <Container class="mt-9">
    <div class="max-w-2xl">
      <h1 class="text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 sm:text-5xl">
        Backend, Devops, Engineering.
      </h1>
      <p class="mt-6 text-base text-zinc-600 dark:text-zinc-400">
        {INTRO}
      </p>
      <div class="mt-6 flex gap-6">
        <a
          href="https://github.com/sankalpmukim"
          aria-label="Follow on GitHub"
          class="group -m-1 p-1"
        >
          <SocialIcons icon="github" class="h-6 w-6 fill-zinc-500 transition group-hover:fill-zinc-600 dark:fill-zinc-400 dark:group-hover:fill-zinc-300" />
        </a>
        <a
          href="https://www.linkedin.com/in/sankalpmukim"
          aria-label="Follow on LinkedIn"
          class="group -m-1 p-1"
        >
          <SocialIcons icon="linkedin" class="h-6 w-6 fill-zinc-500 transition group-hover:fill-zinc-600 dark:fill-zinc-400 dark:group-hover:fill-zinc-300" />
        </a>
        <a
          href="https://twitter.com/IceCreamChai"
          aria-label="Follow on Twitter"
          class="group -m-1 p-1"
        >
          <SocialIcons icon="twitter" class="h-6 w-6 fill-zinc-500 transition group-hover:fill-zinc-600 dark:fill-zinc-400 dark:group-hover:fill-zinc-300" />
        </a>
        <a
          href="https://www.instagram.com/sankalpmukim/"
          aria-label="Follow on Instagram"
          class="group -m-1 p-1"
        >
          <SocialIcons icon="instagram" class="h-6 w-6 fill-zinc-500 transition group-hover:fill-zinc-600 dark:fill-zinc-400 dark:group-hover:fill-zinc-300" />
        </a>
      </div>
    </div>
  </Container>

  <!-- Photos Section -->
  <div class="mt-16 sm:mt-20">
    <div class="-my-4 flex justify-center gap-5 overflow-hidden py-4 sm:gap-8">
      <div class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 dark:bg-zinc-800 sm:w-72 sm:rounded-2xl rotate-2">
        <img
          src={image1.src}
          alt=""
          class="absolute inset-0 h-full w-full object-cover"
        />
      </div>
      <div class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 dark:bg-zinc-800 sm:w-72 sm:rounded-2xl -rotate-2">
        <img
          src={image2.src}
          alt=""
          class="absolute inset-0 h-full w-full object-cover"
        />
      </div>
      <div class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 dark:bg-zinc-800 sm:w-72 sm:rounded-2xl rotate-2">
        <img
          src={image3.src}
          alt=""
          class="absolute inset-0 h-full w-full object-cover"
        />
      </div>
      <div class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 dark:bg-zinc-800 sm:w-72 sm:rounded-2xl rotate-2">
        <img
          src={image4.src}
          alt=""
          class="absolute inset-0 h-full w-full object-cover"
        />
      </div>
      <div class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 dark:bg-zinc-800 sm:w-72 sm:rounded-2xl -rotate-2">
        <img
          src={image5.src}
          alt=""
          class="absolute inset-0 h-full w-full object-cover"
        />
      </div>
    </div>
  </div>

  <Container class="mt-24 md:mt-28">
    <div class="mx-auto grid max-w-xl grid-cols-1 gap-y-20 lg:max-w-none lg:grid-cols-2">
      <div class="flex flex-col gap-16">
        {articles.map((article) => (
          <Card>
            <CardTitle href={`/articles/${article.slug}`}>
              {article.title}
            </CardTitle>
            <CardEyebrow as="time" dateTime={article.date} decorate>
              {formatDate(article.date)}
            </CardEyebrow>
            <CardDescription>{article.description}</CardDescription>
            <CardCta>Read article</CardCta>
          </Card>
        ))}
      </div>
      <div class="space-y-10 lg:pl-16 xl:pl-24">
        <!-- Work Experience -->
        <div class="rounded-2xl border border-zinc-100 p-6 dark:border-zinc-700/40">
          <h2 class="flex text-sm font-semibold text-zinc-900 dark:text-zinc-100">
            <svg viewBox="0 0 24 24" fill="none" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" class="h-6 w-6 flex-none">
              <path d="M2.75 9.75a3 3 0 0 1 3-3h12.5a3 3 0 0 1 3 3v8.5a3 3 0 0 1-3 3H5.75a3 3 0 0 1-3-3v-8.5Z" class="fill-zinc-100 stroke-zinc-400 dark:fill-zinc-100/10 dark:stroke-zinc-500" />
              <path d="M3 14.25h6.249c.484 0 .952-.002 1.316.319l.777.682a.996.996 0 0 0 1.316 0l.777-.682c.364-.32.832-.319 1.316-.319H21M8.75 6.5V4.75a2 2 0 0 1 2-2h2.5a2 2 0 0 1 2 2V6.5" class="stroke-zinc-400 dark:stroke-zinc-500" />
            </svg>
            <span class="ml-3">Work</span>
          </h2>
          <ol class="mt-6 space-y-4">
            {resumes.map((role, roleIndex) => (
              <li key={roleIndex} class="flex gap-4">
                <div class="relative mt-1 flex h-10 w-10 flex-none items-center justify-center rounded-full shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0">
                  <img
                    src={role.logo.src}
                    alt=""
                    class="h-7 w-7 rounded-full"
                  />
                </div>
                <dl class="gap-x-2">
                  <dt class="sr-only">Company</dt>
                  <dd class="w-full flex-none text-sm font-medium text-zinc-900 dark:text-zinc-100">
                    {role.company}
                  </dd>
                  <dt class="sr-only">Role</dt>
                  <dd class="text-xs text-zinc-500 dark:text-zinc-400">
                    {role.title}
                  </dd>
                  <dt class="sr-only">Date</dt>
                  <dd
                    class="text-xs text-zinc-400 dark:text-zinc-500"
                    aria-label={`${role.start} until ${role.end.label || role.end}`}
                  >
                    <time dateTime={role.start}>
                      {role.start}
                    </time>{' '}
                    <span aria-hidden="true">â€”</span>{' '}
                    <time dateTime={role.end.dateTime || role.end}>
                      {role.end.label || role.end}
                    </time>
                  </dd>
                </dl>
              </li>
            ))}
          </ol>
          <Button
            href="/resume.pdf"
            variant="secondary"
            class="group mt-6 w-full"
          >
            Download CV
            <svg viewBox="0 0 16 16" fill="none" aria-hidden="true" class="h-4 w-4 stroke-zinc-400 transition group-active:stroke-zinc-600 dark:group-hover:stroke-zinc-50 dark:group-active:stroke-zinc-50">
              <path d="M4.75 8.75 8 12.25m0 0 3.25-3.5M8 12.25v-8.5" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
          </Button>
        </div>
      </div>
    </div>
  </Container>
</Layout>
